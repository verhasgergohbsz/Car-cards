<Window x:Class="CarCards.End"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarCards"
        mc:Ignorable="d"
        Title="End" Height="350" Width="300"
        Background="AliceBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="PlayerScore" HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="Scoreplayer" VerticalAlignment="Center" Width="69"/>
        <TextBlock x:Name="BotScore" HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="ScoreBot" VerticalAlignment="Center" Grid.Column="2"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text=":" VerticalAlignment="Center" Grid.Column="1"/>
        <TextBlock x:Name="Result" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Nyertél!" VerticalAlignment="Center" Grid.Column="1" Margin="26.4,37.8,13.128,37.4"/>
        <Button x:Name="EndButton" Content="Játék Vége" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="75" Grid.Column="1" Margin="7.4,43.6,109.6,43.8" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
