<Window x:Class="CarCards.End"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarCards"
        mc:Ignorable="d"
        Title="End" Height="350" Width="300"
        Background="AliceBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="playerScore" HorizontalAlignment="Right" Grid.Row="0" TextWrapping="Wrap" Text="0" VerticalAlignment="Center"  FontSize="40"/>
        <TextBlock x:Name="botScore" HorizontalAlignment="Left" Grid.Row="0" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Grid.Column="2" FontSize="40"/>
        <TextBlock HorizontalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text=":" VerticalAlignment="Center" Grid.Column="1"/>
        <TextBlock x:Name="result" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="result" VerticalAlignment="Center" Grid.Column="1" FontSize="30"/>
        <Button x:Name="endButton" Content="Játék Vége" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="75" Grid.Column="1" Click="endButton_Click"/>
    </Grid>
</Window>
