<Window x:Class="CarCards.End"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarCards"
        mc:Ignorable="d"
        Title="End" Height="350" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="PlayerScore" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Scoreplayer" VerticalAlignment="Center" Width="65" />
        <TextBlock x:Name="BotScore" Grid.Column="2" HorizontalAlignment="Center"  Grid.Row="0" TextWrapping="Wrap" Text="ScoreBot" VerticalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" Grid.Column="1"  Grid.Row="0" TextWrapping="Wrap" Text=":" VerticalAlignment="Center"/>
        <TextBlock x:Name="Result" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Nyertél!" VerticalAlignment="Center"/>
        <Button x:Name="EndButton" Grid.Column="1" Content="Játék Vége" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="75"/>
    </Grid>
</Window>
