<Window x:Class="CarCards.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarCards"
        mc:Ignorable="d"
        Title="Card Game" Height="450" Width="800"
        Background="AliceBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="57*" />
            <RowDefinition Height="307*" />
            <RowDefinition Height="56*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BTÖssze" Content="Összehasonlít" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2"  Width="98" Height="28" Margin="95.2,18,71.6,10"/>
        <TextBlock x:Name="PlayerHead" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Márka" VerticalAlignment="Center" Margin="116,20,114.8,20.8"/>
        <TextBlock x:Name="BotHead" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="Márka" VerticalAlignment="Center" Grid.Column="2" Margin="115.4,20,115.981,20.8"/>
        <Image x:Name="PlayerImage" HorizontalAlignment="Stretch" Height="100" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="BotImage" HorizontalAlignment="Stretch" Height="100" Margin="0,10,0,0" Grid.Row="1" Grid.Column="2" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
